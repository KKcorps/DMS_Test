<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:id="@+id/footerView"
    android:layout_gravity="bottom">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="#336682">

            <ImageButton
                android:id="@+id/footerSearch"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/imagebuttonselector"
                android:src="@drawable/search48"/>

            <ImageButton
                android:id="@+id/footerCart"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/imagebuttonselector"
                android:src="@drawable/shopping_cart_filled48"/>

            <ImageButton
                android:id="@+id/footerHome"
                android:padding="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/imagebuttonselector"
                android:src="@drawable/home48"/>


            <ImageButton
                android:id="@+id/footerFaceBook"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/imagebuttonselector"
                android:src="@drawable/facebook482"/>

            <ImageButton
                android:id="@+id/footerLinkedIn"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:background="@drawable/imagebuttonselector"
                android:src="@drawable/linkedin48"/>

        </LinearLayout>

</RelativeLayout>


